@model IEnumerable<NorthwestLabs.Models.Assay>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Assay_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Base_Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assay_Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Assay_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Base_Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Assay_Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Assay_ID }, new { @class = "btn" }) | 
            @Html.ActionLink("Details", "Details", new { id=item.Assay_ID }, new { @class = "btn" }) | 
            @Html.ActionLink("Delete", "Delete", new { id=item.Assay_ID }, new { @class = "btn" })
